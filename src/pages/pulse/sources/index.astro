---
import UiLayout from "@/components/layout/UiLayout.astro";
import { FeedManager } from "@/features/feeds/feedManager";
---

<UiLayout>
	<div class="p-8">
		<h1 class="font-serif text-2xl">Scouting411 Pulse Sources</h1>

		<div class="flex flex-col gap-5">
			{
				FeedManager.feeds.map(async (feed) => (
					<div class="border-gray-3 rounded-lg border p-5 flex flex-col gap-1.5">
						<a
							href={feed.overviewUrl}
							class="text-blue font-serif text-xl font-bold hover:underline"
						>
							{feed.name}
						</a>
						<p class="text-sm">{feed.description}</p>
					</div>
				))
			}
		</div>
	</div>
</UiLayout>
