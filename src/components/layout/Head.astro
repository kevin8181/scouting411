---
import { Font } from "astro:assets";
import ClientRouter from "astro/components/ClientRouter.astro";
import { FeedManager } from "@/features/feeds/feedManager";
---

<head>
	<meta charset="utf-8" />
	<!-- todo add favicon -->
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<link rel="sitemap" href="/sitemap-index.xml" />

	{
		FeedManager.feeds.map((feed) => (
			<link
				rel="alternate"
				type="application/rss+xml"
				title={feed.name}
				href={feed.rssUrl}
			/>
		))
	}

	<!-- todo remove this before production -->
	<meta name="robots" content="noindex" />

	<title>Scouting411</title>

	<!-- todo add opengraph tags and meta description -->

	<Font cssVariable="--font-roboto-slab" preload />
	<Font cssVariable="--font-roboto" preload />
	<Font cssVariable="--font-montserrat" preload />

	<ClientRouter />
</head>
